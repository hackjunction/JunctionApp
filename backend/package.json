{
    "name": "junctionapp-backend",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon index.js",
        "start": "node index.js | npm run pipe-logs",
        "pipe-logs": "pino-cloudwatch --aws_access_key_id=$AWS_ACCESS_KEY_ID --aws_secret_access_key=$AWS_SECRET_ACCESS_KEY --aws_region=$AWS_REGION --group=$AWS_CLOUDWATCH_LOG_GROUP",
        "test": "echo \"Error: no test specified\" && exit 1",
        "precommit": "echo \"Backend: running pre-commit checks\""
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@hackjunction/shared": "file:../shared",
        "@sendgrid/client": "^6.4.0",
        "@sendgrid/mail": "^6.4.0",
        "@stdlib/stdlib": "0.0.87",
        "apollo-server-express": "^2.9.16",
        "auth0": "^2.17.0",
        "axios": "^0.19.0",
        "bcrypt": "^3.0.6",
        "better-npm-run": "^0.1.1",
        "bluebird": "^3.5.4",
        "body-parser": "^1.18.3",
        "celebrate": "^12.1.1",
        "cloudinary": "^1.14.0",
        "cron": "^1.7.2",
        "dataloader": "^2.0.0",
        "discord.js": "^11.5.1",
        "dotenv": "^8.2.0",
        "express": "^4.16.4",
        "express-async-handler": "^1.1.4",
        "express-jwt": "^5.3.1",
        "graphql": "^14.6.0",
        "graphql-iso-date": "^3.6.1",
        "graphql-tools": "^5.0.0",
        "graphql-type-json": "^0.3.1",
        "helmet": "^3.21.2",
        "heroku-ssl-redirect": "0.0.4",
        "http-status": "^1.4.2",
        "jwks-rsa": "^1.4.0",
        "lodash": "^4.17.11",
        "moment-timezone": "^0.5.26",
        "mongoose": "^5.8.9",
        "mongoose-slug-plugin": "^2.0.2",
        "multer": "^1.4.1",
        "multer-storage-cloudinary": "^2.2.1",
        "pino": "^6.2.1",
        "pino-pretty": "^4.0.0",
        "pino-sentry": "^0.2.2",
        "shortid": "^2.2.14",
        "yup": "^0.27.0"
    },
    "eslintConfig": {
        "extends": [
            "airbnb-base",
            "prettier"
        ],
        "plugins": [
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 2018
        },
        "rules": {
            "no-param-reassign": 0,
            "no-underscore-dangle": 0,
            "prefer-destructuring": [
                "error",
                {
                    "VariableDeclarator": {
                        "array": false,
                        "object": true
                    },
                    "AssignmentExpression": {
                        "array": false,
                        "object": true
                    }
                }
            ],
            "prettier/prettier": [
                "error",
                {
                    "printWidth": 80,
                    "trailingComma": "es5",
                    "semi": false,
                    "jsxSingleQuote": false,
                    "singleQuote": true,
                    "useTabs": false,
                    "tabWidth": 4,
                    "bracketSpacing": true
                }
            ]
        }
    },
    "devDependencies": {
        "eslint": "^6.7.2",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-import": "^2.19.1",
        "eslint-plugin-prettier": "^3.1.2",
        "kill-port": "^1.4.0",
        "nodemon": "^1.18.10",
        "prettier": "^1.19.1"
    },
    "engines": {
        "node": "12.3.1",
        "npm": "6.9.0"
    }
}
