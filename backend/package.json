{
    "name": "junctionapp-backend",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon --trace-deprecation --inspect --max_old_space_size=2560 index.js",
        "start": "node --max_old_space_size=2560 index.js",
        "prod": "pm2 start --max_old_space_size=2560 index.js --watch",
        "pipe-logs": "pino-cloudwatch --aws_access_key_id=$AWS_ACCESS_KEY_ID --aws_secret_access_key=$AWS_SECRET_ACCESS_KEY --aws_region=$AWS_REGION --group=$AWS_CLOUDWATCH_LOG_GROUP",
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "eslint ./common && eslint ./modules && eslint ./utils",
        "lint-fix": "eslint ./common --fix && eslint ./modules --fix && eslint ./utils --fix",
        "depcheck": "depcheck .",
        "eslint-check": "eslint --print-config path/to/main.js | eslint-config-prettier-check",
        "precommit": "echo \"Backend: running pre-commit checks\"",
        "debug": "nodemon --inspect index.js"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@apollo/server": "^4.10.4",
        "@hackjunction/shared": "file:../shared",
        "@sendgrid/client": "^8.1.3",
        "@sendgrid/mail": "^8.1.3",
        "@stdlib/math": "^0.0.11",
        "auth0": "^2.31.1",
        "axios": "^1.7.2",
        "bcrypt": "^5.0.0",
        "better-npm-run": "^0.1.1",
        "bluebird": "^3.7.2",
        "celebrate": "^12.1.1",
        "cloudinary": "^1.21.0",
        "cors": "^2.8.5",
        "cron": "^1.8.2",
        "dataloader": "^2.0.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-async-handler": "^1.1.4",
        "express-jwt": "^6.0.0",
        "graphql": "^16.8.2",
        "graphql-scalars": "^1.23.0",
        "graphql-subscriptions": "^2.0.0",
        "graphql-tools": "^9.0.1",
        "graphql-type-json": "^0.3.2",
        "graphql-ws": "^5.16.0",
        "helmet": "^3.22.0",
        "jwks-rsa": "^1.12.2",
        "lodash": "^4.17.21",
        "moment-timezone": "^0.5.31",
        "mongoose": "6.12.9",
        "mongoose-slug-plugin": "^2.0.3",
        "multer": "^1.4.2",
        "multer-storage-cloudinary": "^2.2.1",
        "pino": "^6.3.1",
        "shortid": "^2.2.15",
        "ws": "^8.17.1",
        "yup": "^0.29.1"
    },
    "eslintConfig": {
        "env": {
            "es2020": true
        },
        "extends": [
            "airbnb-base",
            "prettier"
        ],
        "plugins": [
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 2020
        },
        "rules": {
            "no-param-reassign": 0,
            "no-underscore-dangle": 0,
            "prefer-destructuring": [
                "error",
                {
                    "VariableDeclarator": {
                        "array": false,
                        "object": true
                    },
                    "AssignmentExpression": {
                        "array": false,
                        "object": true
                    }
                }
            ],
            "prettier/prettier": [
                "error",
                {
                    "printWidth": 80,
                    "trailingComma": "es5",
                    "semi": false,
                    "jsxSingleQuote": false,
                    "singleQuote": true,
                    "useTabs": false,
                    "tabWidth": 4,
                    "bracketSpacing": true,
                    "arrowParens": "avoid"
                }
            ]
        }
    },
    "devDependencies": {
        "depcheck": "^0.9.2",
        "eslint": "^6.6.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-prettier": "^3.1.3",
        "kill-port": "^1.6.0",
        "nodemon": "^2.0.4",
        "prettier": "^2.0.5"
    },
    "engines": {
        "node": "22.2.0",
        "npm": "10.7.0"
    }
}
