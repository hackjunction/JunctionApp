{
    "name": "junctionapp-backend",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon index.js",
        "start": "node index.js | npm run pipe-logs",
        "pipe-logs": "pino-cloudwatch --aws_access_key_id=$AWS_ACCESS_KEY_ID --aws_secret_access_key=$AWS_SECRET_ACCESS_KEY --aws_region=$AWS_REGION --group=$AWS_CLOUDWATCH_LOG_GROUP",
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "eslint ./common && eslint ./modules && eslint ./utils",
        "lint-fix": "eslint ./common --fix && eslint ./modules --fix && eslint ./utils --fix",
        "depcheck": "depcheck .",
        "eslint-check": "eslint --print-config path/to/main.js | eslint-config-prettier-check",
        "precommit": "echo \"Backend: running pre-commit checks\""
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@hackjunction/shared": "file:../shared",
        "@sendgrid/client": "^7.1.1",
        "@sendgrid/mail": "^7.1.1",
        "@stdlib/stdlib": "0.0.91",
        "apollo-server-express": "^2.14.2",
        "auth0": "^2.27.1",
        "axios": "^0.19.2",
        "bcrypt": "^4.0.1",
        "better-npm-run": "^0.1.1",
        "bluebird": "^3.7.2",
        "body-parser": "^1.19.0",
        "celebrate": "^12.1.1",
        "cloudinary": "^1.21.0",
        "cron": "^1.8.2",
        "dataloader": "^2.0.0",
        "discord.js": "^12.2.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-async-handler": "^1.1.4",
        "express-jwt": "^6.0.0",
        "graphql": "^15.0.0",
        "graphql-iso-date": "^3.6.1",
        "graphql-tools": "^6.0.15",
        "graphql-type-json": "^0.3.1",
        "helmet": "^3.22.0",
        "heroku-ssl-redirect": "0.0.4",
        "http-status": "^1.4.2",
        "jwks-rsa": "^1.8.0",
        "lodash": "^4.17.19",
        "moment-timezone": "^0.5.31",
        "mongoose": "^5.9.16",
        "mongoose-slug-plugin": "^2.0.3",
        "multer": "^1.4.2",
        "multer-storage-cloudinary": "^2.2.1",
        "pino": "^6.3.1",
        "pino-pretty": "^4.0.0",
        "pino-sentry": "^0.3.0",
        "shortid": "^2.2.15",
        "yup": "^0.29.1"
    },
    "eslintConfig": {
        "env": {
            "es2020": true
        },
        "extends": [
            "airbnb-base",
            "prettier"
        ],
        "plugins": [
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 2020
        },
        "rules": {
            "no-param-reassign": 0,
            "no-underscore-dangle": 0,
            "prefer-destructuring": [
                "error",
                {
                    "VariableDeclarator": {
                        "array": false,
                        "object": true
                    },
                    "AssignmentExpression": {
                        "array": false,
                        "object": true
                    }
                }
            ],
            "prettier/prettier": [
                "error",
                {
                    "printWidth": 80,
                    "trailingComma": "es5",
                    "semi": false,
                    "jsxSingleQuote": false,
                    "singleQuote": true,
                    "useTabs": false,
                    "tabWidth": 4,
                    "bracketSpacing": true,
                    "arrowParens": "avoid"
                }
            ]
        }
    },
    "devDependencies": {
        "depcheck": "^0.9.2",
        "eslint": "^6.6.0",
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-prettier": "^3.1.3",
        "kill-port": "^1.6.0",
        "nodemon": "^2.0.4",
        "prettier": "^2.0.5"
    },
    "engines": {
        "node": "12.3.1",
        "npm": "6.9.0"
    }
}
