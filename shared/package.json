{
    "name": "@hackjunction/shared",
    "version": "1.1.45",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "",
        "precommit": "echo \"Shared: running pre-commit checks\" && npm run test"
    },
    "author": "Eino Miettinen",
    "license": "ISC",
    "eslintConfig": {
        "env": {
            "es2020": true
        },
        "extends": [
            "airbnb-base",
            "prettier"
        ],
        "plugins": [
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 2018
        },
        "rules": {
            "no-param-reassign": 0,
            "no-underscore-dangle": 0,
            "prefer-destructuring": [
                "error",
                {
                    "VariableDeclarator": {
                        "array": false,
                        "object": true
                    },
                    "AssignmentExpression": {
                        "array": false,
                        "object": true
                    }
                }
            ],
            "prettier/prettier": [
                "error",
                {
                    "printWidth": 80,
                    "trailingComma": "es5",
                    "semi": false,
                    "jsxSingleQuote": false,
                    "singleQuote": true,
                    "useTabs": false,
                    "tabWidth": 4,
                    "bracketSpacing": true,
                    "arrowParens": "avoid"
                }
            ]
        }
    },
    "dependencies": {
        "graphql": "^15.0.0",
        "graphql-iso-date": "^3.6.1",
        "lodash": "^4.17.19",
        "mongoose": "^5.9.16",
        "object-path": "^0.11.4",
        "yup": "^0.29.1"
    },
    "devDependencies": {
        "eslint": "^6.6.0",
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-prettier": "^3.1.3",
        "prettier": "^3.2.5"
    },
    "engines": {
        "node": "12.3.1",
        "npm": "6.9.0"
    }
}
